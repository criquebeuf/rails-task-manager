<h1><%= @task.title%></h1>
<p><%= @task.details%></p>
<p><%= @task.completed%></p>

<div><%= link_to "Edit this task", edit_path %></div>

<%= link_to "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<div><%= link_to "Back to list", tasks_path %></div>
